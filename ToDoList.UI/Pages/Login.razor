@page "/login"
@inherits PageCodeSource.LoginCodeSource
<div class="container">
    <h1>Login</h1>
    <p>Please fill in this form to log into your account.</p>
    <hr>

    <label for="username"><b>Username</b></label>
    <input type="text" @bind="@Model.Username" placeholder="Enter Username" name="username" id="username" required>

    <label for="psw"><b>Password</b></label>
    <input type="password" @bind="@Model.Password" placeholder="Enter Password" name="psw" id="psw" required>
    <hr>

    <p>By logging in, you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn" @onclick="@Login">Login</button>
</div>

<div class="container signin">
    <p>Don't have an account? <a href="#">Sign up</a>.</p>
</div>

<style>
    /* Container */
    .container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 400px;
        padding: 30px;
    }

    /* Header */
    h1 {
        font-size: 24px;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    p {
        font-size: 14px;
        color: #666;
        text-align: center;
    }

    /* Input fields */
    input[type="text"], input[type="password"] {
        width: 100%;
        padding: 14px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

        input[type="text"]:focus, input[type="password"]:focus {
            border-color: #0066cc;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 102, 204, 0.4);
        }

    /* Button */
    .registerbtn {
        background-color: #0066cc;
        color: white;
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .registerbtn:hover {
            background-color: #005bb5;
        }

    /* Privacy text */
    p a {
        color: #0066cc;
        text-decoration: none;
    }

        p a:hover {
            text-decoration: underline;
        }

    /* Signin section */
    .signin {
        text-align: center;
        margin-top: 20px;
    }

        .signin a {
            color: #0066cc;
            font-weight: bold;
            text-decoration: none;
        }

            .signin a:hover {
                text-decoration: underline;
            }

</style>